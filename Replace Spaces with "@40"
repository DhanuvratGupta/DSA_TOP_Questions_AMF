public class Solution {
	public static StringBuilder replaceSpaces(StringBuilder str) {
	  for(int i=0;i<str.length();i++)
      {
          if(str.charAt(i)==' ')
          {
              str.delete(i,i+1);
              str.insert(i,'@');
              str.insert(i+1,'0');
              str.insert(i+1,'4');
              
          }
      }
        return str;
	}
}
